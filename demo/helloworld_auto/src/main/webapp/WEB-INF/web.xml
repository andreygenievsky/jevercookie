<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	id="WebApp_ID" version="2.5">

	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>

	<servlet>
		<servlet-name>JevercookieJsServlet</servlet-name>
		<servlet-class>com.agenievsky.jevercookie.js.servlet.JevercookieJsServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>JevercookieJsServlet</servlet-name>
		<url-pattern>/jevercookie_helloworld_auto.js</url-pattern>
	</servlet-mapping>

	<filter>
		<filter-name>JevercookieAutoadditionFilter</filter-name>
		<filter-class>com.agenievsky.jevercookie.js.filter.JevercookieAutoadditionFilter</filter-class>
		<init-param>
			<param-name>JevercookieJsPath</param-name>
			<param-value>/jevercookie_helloworld_auto.js</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>JevercookieAutoadditionFilter</filter-name>
		<url-pattern>*.html</url-pattern>
	</filter-mapping>

</web-app>
